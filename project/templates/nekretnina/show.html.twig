{% extends 'base.html.twig' %}

{% block title %}Nekretnina{% endblock %}

{% block body %}
    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    <h1>Nekretnina</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nekretnina.id }}</td>
            </tr>
            <tr>
                <th>Naslov</th>
                <td>{{ nekretnina.naslov }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ nekretnina.opis }}</td>
            </tr>
            <tr>
                <th>Cijena</th>
                <td>{{ nekretnina.cijena }}</td>
            </tr>
            <tr>
                <th>Kategorija</th>
                <td>{{ nekretnina.kategorija }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nekretnina_index') }}">back to list</a>

    <a href="{{ path('app_nekretnina_edit', {'id': nekretnina.id}) }}">edit</a>

    {{ include('nekretnina/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
